  <div class="field">
    <%= f.label :nachname %>
    <%= f.text_field :nachname %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

    <div class="field">
      <%= f.label :rechte %>
      <%= f.select :rechte, ['Manager', 'Angestellter']%>
