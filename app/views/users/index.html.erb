  <div class="col-sm-10">
    <h2> <i class="glyphicon glyphicon-user"></i>  Mitarbeiter√ºbersicht</h2>
    <br>

    <table id="Mitarbeiter" class="table table-bordered">
      <thead>
      <tr>
        <th>Vorname</th>
        <th>Nachname</th>
        <th>Email</th>
        <th>Rechte</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.vorname %></td>
            <td><%= user.nachname %></td>
            <td><%= user.email %></td>
            <td><%= user.rechte %></td>
            </td>

            <!-- Buttons mit Glyphicons -->
            <td><%= link_to user, class: 'btn btn-primary btn-xs' do%>
                  <i class="glyphicon glyphicon-eye-open"></i>
              <% end %>
              <%= link_to edit_user_path(user), class: 'btn btn-warning btn-xs' do%>
                  <i class="glyphicon glyphicon-edit"></i>
              <% end %>
              <%= link_to user,  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do%>
                  <i class="glyphicon glyphicon-remove"></i>
              <% end %></td>
          </tr>
      <% end %>
      </tbody>
    </table>


    <!--<%= link_to 'New User', new_user_path %>-->
    <%= link_to new_user_path, class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-plus"></i>
    <% end %>

  </div>